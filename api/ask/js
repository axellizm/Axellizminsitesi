export default async function handler(req, res) {
  if (req.method !== "POST") {
    return res.status(405).json({ error: "Only POST allowed" });
  }

  try {
    const { input } = req.body;

    const r = await fetch(
      `https://generativelanguage.googleapis.com/v1beta/models/gemini-1.5-flash:generateContent?key=${process.env.AIzaSyBbNcF5nqCqOfNb_2_hu2TjHWcJFyTu8I4}`,
      {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          contents: [
            { role: "user", parts: [{ text: input }] }
          ]
        })
      }
    );

    const data = await r.json();

    const text = data.candidates?.[0]?.content?.parts?.[0]?.text || "YanÄ±t yok";

    res.status(200).json({ output: text });
  } catch (e) {
    console.error(e);
    res.status(500).json({ error: "Backend error" });
  }
}
